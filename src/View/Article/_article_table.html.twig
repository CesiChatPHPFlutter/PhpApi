    <tbody>
    {% for article in articles %}
        <tr>
            <td><a href="/Article/update/{{ article.id }}">{{ article.Id }}</a></td>
            <td><a href="/Article/show/{{ article.id }}">{{ article.Titre }}</a></td>
            <td>{{ article.DatePublication|date("d/m/Y") }}</td>
